<div class="text-center"> 
    
  <h1>Cadastro</h1>
  <p>Bem-vindo</p>

  <div class="row">

    <input type="email" placeholder="Email">
    <input type="password" placeholder="Senha">
    <input type="password" placeholder="Confimar Senha">

  </div>

  <div class="d-flex mt-3">
    <p>Confimar que não é um Robo</p>
    <input type="checkbox">
  </div>

    <button class="bg-dark text-light mt-3">Cadastrar</button>

    @{
        string nome = "Pino";
    }

    <h1 class="mt-3">Olá, @nome</h1>
    <p>Hoje é @DateTime.Now.ToString("dd/MM/yyyy  hh:mm:ss"). </p>

    @{
        bool mostrarMensagem = true;
        if (mostrarMensagem == true)
        {
          <p>Esta é uma mensagem que entrou no if</p>
        }

        for (var i = 1; i <= 10; i++)
        {
          int res = i*8;
          <p> 8 X @i = @res </p>
        }
    }

</div>